{
  "name": "@hypersprite/react-geolocation-hoc",
  "version": "1.0.0",
  "description": "Geolocation HOC",
  "main": "dst/index.js",
  "scripts": {
    "test": "jest",
    "test:dev": "jest --watch",
    "lint": "eslint src/* .jsx",
    "build": "babel src --out-dir dst",
    "build:dev": "nodemon --watch src --exec 'npm run build'",
    "preversion": "npm run test && npm run lint",
    "version": "npm run build",
    "postversion": "npm publish && rm -rf dst && git push"
  },
  "precommit": [
    "lint",
    "test"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "peerDependencies": true
        }
      ]
    }
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "./.enzyme"
    ],
    "collectCoverage": true
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.1.4",
    "pre-commit": "^1.2.2",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "keywords": [
    "geolocation",
    "react",
    "hoc"
  ],
  "author": "C. Dunavan",
  "homepage": "https://github.com/HyperSprite/react-geolocation-hoc#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HyperSprite/react-geolocation-hoc.git"
  },
  "bugs": {
    "url": "https://github.com/HyperSprite/react-geolocation-hoc/issues"
  },
  "license": "MIT"
}
